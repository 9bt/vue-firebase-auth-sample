{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2015",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"],
      "@/*": ["src/*"]
    },
    "typeRoots": ["types", "node_modules/@types"]
  },
  "include": ["./src/**/*"]
}
